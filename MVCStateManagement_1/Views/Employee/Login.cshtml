@model Employee


@{
    ViewBag.Title = "Login";
}


<h1 style="color:red">@ViewBag.KullaniciYok</h1>

@using (Html.BeginForm())
{
    <div>
        @Html.TextBoxFor(x => x.FirstName)
    </div>

    <div>
        @Html.TextBoxFor(x => x.LastName)
    </div>

    <div>
        <button class="btn btn-primary">Login</button>
    </div>
}